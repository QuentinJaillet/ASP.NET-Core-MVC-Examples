@model IEnumerable<MyWebApp.Models.ProductItemViewModels.ProductItemViewModel>

<table id="products" class="table" data-url='@Url.Action("Index")'>
<thead>
    <tr>
        <th>#</th>
        <th>Nom</th>
        <th>Actions</th>
    </tr>
</thead>
<tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td><button type="button" class="btn btn-primary" data-toggle="ajax-modal" data-url='@Url.Action("Edit", new { id = @item.Id })'>Edit</button></td>
        </tr>
    }
</tbody>
</table>